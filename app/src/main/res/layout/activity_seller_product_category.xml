<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerProductCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/birds"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bird"
            />

        <ImageView
            android:id="@+id/cats"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cat"
            />

        <ImageView
            android:id="@+id/cows"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cow"
            />

        <ImageView
            android:id="@+id/dogs"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dog"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/fishes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/fish"
            />

        <ImageView
            android:id="@+id/hamsters"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hamster"
            />

        <ImageView
            android:id="@+id/horses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/horse"
            />

        <ImageView
            android:id="@+id/rabbits"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/rabbit"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/sheep"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sheep"
            />

        <ImageView
            android:id="@+id/turtles"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/turtle"
            />

        <ImageView
            android:id="@+id/lizards"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/lizard"
            />

        <ImageView
            android:id="@+id/snakes"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/snake"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>


</RelativeLayout>